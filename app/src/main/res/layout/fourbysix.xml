<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fourbysix"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokewallpapertwo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="91dp"
        android:textColor="#11DA03"
        android:textSize="40dp"
        tools:text="1:00" />

    <include
        layout="@layout/images3"
        android:layout_width="379dp"
        android:layout_height="535dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="82dp"
        android:text="Score: 0"
        android:textColor="#000000"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Best: 0"
        android:textColor="#000000"
        android:textSize="32dp" />


    <Button
        android:id="@+id/dimension_select3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_p1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="-49dp"
        android:layout_marginBottom="257dp"
        android:background="@drawable/teal_background"
        android:fontFamily="@font/carter_one"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="MARIO MODE"
        android:textColor="#000000"
        android:textStyle="bold"
        android:translationX="50dp" />

    <Button
        android:id="@+id/dimension_select2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_p1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="-48dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/teal_background"
        android:fontFamily="@font/carter_one"
        android:shadowColor="@color/white"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="DINO MODE"
        android:textColor="#000000"
        android:textStyle="bold"
        android:translationX="50dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@drawable/my_button_bgtwo"
        android:fontFamily="@font/carter_one"
        android:text="START"
        android:textStyle="bold" />

</RelativeLayout>